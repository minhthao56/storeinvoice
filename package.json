  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "formik": "^2.2.9",
    "moment": "^2.29.1",
    "pdf-parse": "^1.1.1",
    "react": "^17.0.2",
