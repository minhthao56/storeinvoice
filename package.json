    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/pdf-parse": "^1.1.1",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-pdf": "^5.0.5",
    "@types/react-router-dom": "^5.1.8",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@types/testing-library__react": "^10.2.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "css-loader": "^6.2.0",
