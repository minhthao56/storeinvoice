    "appId": "com.app.StoreInvoice",
    "publish": [
      {
        "provider": "github",
        "owner": "minhthao",
        "repo": "storeinvoice"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "output": "release"
    }
  },
  "electronmon": {
    "patterns": [
      "!src/*",
      "!dist/*"
    ]
  }
